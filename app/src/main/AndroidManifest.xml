<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hgad.warehousemanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- 震动权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" /> <!-- 使用照相机权限 -->
    <uses-feature android:name="android.hardware.camera.autofocus" /> <!-- 自动聚焦权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.MainActivity"
            android:launchMode="singleTask" />
        <activity android:name=".ui.activity.LoginActivity" />
        <activity android:name=".ui.activity.SettingActivity" />
        <activity android:name=".ui.activity.WareHouseActivity" />
        <activity android:name=".ui.activity.InWareChooseActivity" />
        <activity android:name=".ui.activity.InWareByHandActivity" />
        <activity android:name=".ui.activity.OutWareActivity" />
        <activity android:name=".ui.activity.CheckActivity" />
        <activity android:name=".ui.activity.ChangeWareActivity" />
        <activity android:name=".ui.activity.ScanResultActivity" />
        <activity android:name=".zxing.activity.CaptureActivity" />
        <activity android:name=".ui.activity.ChangePwdActivity" />
        <activity android:name=".ui.activity.WeatherActivity" />
        <activity android:name=".ui.activity.OtherInfoActivity" />
        <activity android:name=".ui.activity.UserSettingActivity" />
        <activity android:name=".ui.activity.IpSettingActivity" />
        <activity android:name=".ui.activity.AddIpActivity" />
        <activity android:name=".ui.activity.CheckRecordActivity" />
        <activity android:name=".ui.activity.ProductListActivity" />
        <activity android:name=".ui.activity.VersionActivity" />
        <activity android:name=".ui.activity.NotificationActivity" />
        <activity android:name=".ui.activity.GeneralToolsActivity" />
        <activity android:name=".ui.activity.FaroriteActivity" />
        <activity android:name=".ui.activity.CheckDetailActivity" />
        <activity android:name=".ui.activity.CheckResultActivity" />
        <activity android:name=".ui.activity.SystemSettingActivity" />
        <activity android:name=".ui.activity.HandOperateActivity" />
        <activity android:name=".ui.activity.ReviewActivity" />
        <activity android:name=".ui.activity.ApplyOutActivity" />
        <activity android:name=".ui.activity.OutResultActivity" />
        <activity android:name=".ui.activity.ReviewResultActivity" />
        <activity android:name=".ui.activity.HistoryActivity" />
        <activity android:name=".ui.activity.ProductDetailActivity" />

        <service android:name=".ui.service.PushService" />

        <!-- User defined. 用户自定义的广播接收器-->
        <receiver
            android:name=".ui.receiver.PushReceiver"
            android:enabled="true">
            <intent-filter>
                <!--Required 用户注册SDK的intent-->
                <action android:name="cn.jpush.android.intent.REGISTRATION" />
                <!--Required 用户接收SDK消息的intent-->
                <action android:name="cn.jpush.android.intent.MESSAGE_RECEIVED" />
                <!--Required 用户接收SDK通知栏信息的intent-->
                <action android:name="cn.jpush.android.intent.NOTIFICATION_RECEIVED" />
                <!--Required 用户打开自定义通知栏的intent-->
                <action android:name="cn.jpush.android.intent.NOTIFICATION_OPENED" />
                <action android:name="cn.jpush.android.intent.NOTIFICATION_CLICK_ACTION" />
                <!-- 接收网络变化 连接/断开 since 1.6.3 -->
                <action android:name="cn.jpush.android.intent.CONNECTION" />
                <category android:name="${applicationId}" />
            </intent-filter>
        </receiver>
    </application>

</manifest>