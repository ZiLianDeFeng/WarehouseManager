<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="@color/dark"
        android:fitsSystemWindows="true"
        android:paddingTop="23dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@color/white"
            android:textSize="@dimen/common_head_text_size" />

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/common_dp"
            android:padding="@dimen/common_dp"
            android:visibility="invisible"
            android:src="@mipmap/scan" />
    </RelativeLayout>

    <!--<com.bigkoo.convenientbanner.ConvenientBanner xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <!--android:id="@+id/convenientBanner"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="200dp"-->
    <!--app:canLoop="true" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/timg"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:padding="@dimen/common_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="今日总录入100笔"
                    android:textColor="@color/light_white"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_padding"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_check_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/common_dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_head_text_size"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/ItemView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="入库量"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/common_text_size" />

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/light_white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_maintain_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/common_dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_head_text_size"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/ItemView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="出库量"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/common_text_size" />

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/light_white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_shelve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/common_dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_head_text_size"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/ItemView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="盘点量"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/common_text_size" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_top"
        android:background="@color/background_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/common_padding">

            <TableRow>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_in_ware"
                        style="@style/table_text"
                        android:drawableTop="@mipmap/inspection"
                        android:text="货品入库"
                        android:textSize="?commonTextSize" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_out_ware"
                        style="@style/table_text"
                        android:drawableTop="@mipmap/warning"
                        android:text="货品出库"
                        android:textSize="?commonTextSize" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_change_ware"
                        style="@style/table_text"
                        android:drawableTop="@mipmap/upkeep"
                        android:text="货品移位"
                        android:textSize="?commonTextSize" />
                </LinearLayout>

            </TableRow>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/background_light" />-->

            <TableRow>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_out_review"
                        style="@style/table_text"
                        android:drawableTop="@mipmap/sign_in"
                        android:text="出库审核"
                        android:textSize="?commonTextSize" />

                    <TextView
                        android:id="@+id/tv_review_result"
                        style="@style/table_text"
                        android:drawableTop="@mipmap/sign_in"
                        android:text="审核记录"
                        android:visibility="gone"
                        android:textSize="?commonTextSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_history"
                        style="@style/table_text"
                        android:drawableTop="@mipmap/history"
                        android:text="历史查询"
                        android:textSize="?commonTextSize" />

                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="@dimen/common_dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center"-->
                    <!--android:orientation="vertical">-->

                    <!--<TextView-->
                        <!--android:id="@+id/tv_task_notification"-->
                        <!--style="@style/table_text"-->
                        <!--android:drawableTop="@mipmap/news"-->
                        <!--android:text="任务通知"-->
                        <!--android:textSize="?commonTextSize" />-->
                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_check"
                        style="@style/table_text"
                        android:drawableTop="@mipmap/tongbu"
                        android:text="货品盘点"
                        android:textSize="?commonTextSize" />

                </LinearLayout>
            </TableRow>

            <TableRow>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                </LinearLayout>

            </TableRow>
        </TableLayout>

    </RelativeLayout>

</LinearLayout>