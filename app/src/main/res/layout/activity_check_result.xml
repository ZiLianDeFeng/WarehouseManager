<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/common_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/CommonTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标  签  号：" />

                <TextView
                    android:id="@+id/tv_markNum"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dp"
                    android:text="HIC10092785"
                    android:textSize="@dimen/common_text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/CommonTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规        格：" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dp"
                    android:text="0.600*1340*C"
                    android:textSize="@dimen/common_text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/CommonTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="净        重：" />

                <TextView
                    android:id="@+id/tv_net_weight"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dp"
                    android:text="8550kg"
                    android:textSize="@dimen/common_text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1000" />

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/white"-->
            <!--android:gravity="center_vertical"-->
            <!--android:orientation="horizontal"-->
            <!--android:padding="5dp">-->

            <!--<TextView-->
            <!--style="@style/CommonTextview"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="毛        重：" />-->

            <!--<TextView-->
            <!--android:id="@+id/tv_gross_weight"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="center_vertical"-->
            <!--android:paddingLeft="@dimen/common_dp"-->
            <!--android:text="8630kg"-->
            <!--android:textSize="@dimen/common_text_size" />-->

            <!--</LinearLayout>-->

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:background="#1000" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/CommonTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addressWare" />

                <TextView
                    android:id="@+id/tv_addressWare"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_dp"
                    android:text="1仓1排1垛1层"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    style="@style/CommonTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="盘点结果" />

                <RadioGroup
                    android:id="@+id/rg_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginleft"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_same"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_dp"
                        android:text="一致" />

                    <RadioButton
                        android:id="@+id/rb_different"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_dp"
                        android:text="不一致" />

                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1000" />

            <LinearLayout
                android:id="@+id/ll_real_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    style="@style/CommonTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实际库位：" />

                <EditText
                    android:id="@+id/et_real_addressWare"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_circle"
                    android:paddingLeft="@dimen/common_dp"
                    android:hint="请填写货位编号"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1000" />

            <EditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_circle"
                android:gravity="top"
                android:hint="备注"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="@dimen/common_padding"
                android:textSize="@dimen/common_text_size" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding"
        android:textColor="@color/black"
        android:textSize="@dimen/common_text_size" />

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_button_height"
        android:background="@color/btn_color"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/item_size" />
    
</LinearLayout>