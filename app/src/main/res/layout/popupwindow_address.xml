<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_dp">

        <TextView
            android:id="@+id/pop_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/common_padding"
            android:text="确定"
            android:textColor="@color/blue"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:id="@+id/pop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/common_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size" />


        <TextView
            android:id="@+id/pop_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_padding"
            android:text="取消"
            android:textColor="@color/blue"
            android:textSize="@dimen/common_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <FrameLayout
            android:id="@+id/fl_map"
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <LinearLayout
                android:id="@+id/pop_floor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="层"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/common_text_size" />

                    <com.hgad.warehousemanager.view.WheelView
                        android:id="@+id/wv_floor"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pop_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <com.hgad.warehousemanager.view.SeatTable
                    android:id="@+id/seatView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pop_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="仓"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/common_text_size" />

                    <com.hgad.warehousemanager.view.WheelView
                        android:id="@+id/wv_ware_num"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_wheel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="仓"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/common_text_size" />

                <com.hgad.warehousemanager.view.WheelView
                    android:id="@+id/wl_ware"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="排"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/common_text_size" />

                <com.hgad.warehousemanager.view.WheelView
                    android:id="@+id/wl_row"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="垛"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/common_text_size" />

                <com.hgad.warehousemanager.view.WheelView
                    android:id="@+id/wl_column"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="层"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/common_text_size" />

                <com.hgad.warehousemanager.view.WheelView
                    android:id="@+id/wl_floor"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/pop_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="@dimen/common_padding"
        android:text="切换"
        android:textColor="@color/blue"
        android:textSize="12sp" />
</LinearLayout>